@model IEnumerable<RoseMountainBandWebsite.Models.Message>

@{
    ViewData["Title"] = "Messages";
}


<div class="w3-container w3-content w3-padding-32 w3-black" style="display: block;margin-left: auto;margin-right: auto;width: 50%;margin-top: 2%;margin-bottom: 2%" id="contact">
    <h2 class="w3-wide w3-center w3-padding-32" style="font-family: 'Lucida Handwriting', Helvetica, sans-serif;font-weight: bold;">MESSAGES</h2>
    <table class="table w3-table w3-striped w3-centered w3-bordered w3-border w3-hoverable w3-white">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubmitterName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubmitterEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SubmittedText)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
    