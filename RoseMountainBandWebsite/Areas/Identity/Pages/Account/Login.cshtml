@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="w3-container w3-content w3-padding-32" style="width: 50%">
    <h2 class="w3-wide w3-center" style="font-family: 'Lucida Handwriting', Helvetica, sans-serif;font-weight: bold;">LOG IN</h2>
    <p class="w3-opacity w3-center"><i>Administrator? Feel free to log in and make updates to the content!</i></p>
    <div class="w3-container w3-content w3-padding-32" style="width: 50%">
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="form-control" style="color: red; font-weight: bold;" role="alert">Authentication failed. Make sure your submitted information is correct, or retry later if the problem persists.</div>
            <label><b>Username</b></label>
            <div>
                <div>
                    <input asp-for="Input.Email" class="form-control w3-input w3-border" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <label><b>Password</b></label>
            <div>
                <div>
                    <input asp-for="Input.Password" class="form-control w3-input w3-border" autocomplete="current-password" aria-required="true" placeholder="password"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div class="w3-center">
                <button id="login-submit" type="submit" class="btn btn-primary w3-button w3-black w3-section">Log in</button>
            </div>
        </form>
    </div>
</div>


